// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Pool {
  id        String   @id @default(cuid()) // gera uid aleatoria ao criar pool
  title     String
  code      String   @unique
  createdAt DateTime @default(now()) // atribui data atual a createdAt ao criar pool
}
